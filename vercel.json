{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build",
        "nodeVersion": "18.x"
      }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "python3.9",
        "excludeFiles": "**/*.?(pyc|pyo|pyd|so|pkl|joblib)"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/frontend/build/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "/frontend/build/manifest.json"
    },
    {
      "src": "^/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ]
} 